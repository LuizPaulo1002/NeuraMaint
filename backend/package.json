{
  "name": "neuramaint-backend",
  "version": "1.0.0",
  "description": "Backend for NeuraMaint - Industrial Equipment Predictive Maintenance System",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {  
    "start": "node dist/index.js",
    "dev": "nodemon --exec node --loader ts-node/esm src/index.ts",
    "build": "tsc",
    "test": "jest --config jest.config.ts --passWithNoTests",
    "test:watch": "jest --config jest.config.ts --watch",
    "test:coverage": "jest --config jest.config.ts --coverage",
    "test:integration": "jest --config jest.integration.config.ts --passWithNoTests --runInBand",
    "test:integration:watch": "jest --config jest.integration.config.ts --watch",
    "test:integration:coverage": "jest --config jest.integration.config.ts --coverage",
    "test:all": "npm run test && npm run test:integration",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio",
    "prisma:migrate": "prisma migrate dev",
    "prisma:seed": "prisma db seed",
    "docs:swagger": "swagger-jsdoc -d swagger.config.cjs src/routes/*.ts src/controllers/*.ts -o src/docs/swagger.json"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "express",
    "prisma",
    "sqlite",
    "predictive-maintenance",
    "iot",
    "industrial"
  ],
  "author": "NeuraMaint Team",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.1.1",
    "axios": "^1.4.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.8.1",
    "express-validator": "^7.2.1",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.22.9",
    "@babel/preset-typescript": "^7.22.5",
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.4.2",
    "@types/supertest": "^2.0.12",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "babel-jest": "^29.6.1",
    "babel-plugin-transform-import-meta": "^2.3.3",
    "dotenv-cli": "^10.0.0",
    "eslint": "^8.45.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prisma": "^5.1.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.1.6"
  }
}
