# ML Service Environment Configuration

# Server Configuration
PORT=5000
FLASK_ENV=production
FLASK_APP=app.py

# Model Configuration
MODEL_VERSION=1.0.0
PREDICTION_TIMEOUT=1.8
MAX_WORKERS=4

# Railway Environment (automatically set by Railway)
# RAILWAY_ENVIRONMENT=production
# RAILWAY_SERVICE_NAME=ml-service

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# CORS Configuration
CORS_ORIGINS=http://localhost:3001,https://pumpguard-pro.railway.app

# Model Training Configuration
SYNTHETIC_DATA_SIZE=5000
RANDOM_SEED=42
TEST_SIZE=0.2